---
import Layout from "@/layouts/Layout.astro";
import Stats from "@/components/charts/Stats.astro";
import AreaChart from "@/components/charts/AreaChart";
import BarChart from "@/components/charts/BarChart";
import PieChart from "@/components/charts/PieChart";
---

<Layout title="DataViz">
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
    <Stats
      class="col-span-2 lg:col-span-2 xl:col-span-1"
      icon="eye"
      amount="$36.54"
      type="views"
      percent="0.43"
      increase
    />
    <Stats
      class="col-span-2 lg:col-span-2 xl:col-span-1"
      icon="cart"
      amount="$42.4"
      type="profit"
      percent="0.24"
      increase
    />
    <Stats
      class="col-span-2 lg:col-span-2 xl:col-span-1"
      icon="product"
      amount="2.8"
      type="product"
      percent="0.52"
      increase
    />
    <Stats
      class="col-span-2 lg:col-span-2 xl:col-span-1"
      icon="users"
      amount="4.57"
      type="users"
      percent="0.41"
      decrease
    />
    <div class="col-span-2 md:col-span-2 xl:col-span-3">
      <AreaChart client:load />
    </div>
    <div class="col-span-2 md:col-span-2 xl:col-span-1">
      <PieChart client:load />
    </div>
    <div class="col-span-2 md:col-span-2 lg:col-span-4 xl:col-span-2">
      <BarChart client:load />
    </div>
  </div>
</Layout>
